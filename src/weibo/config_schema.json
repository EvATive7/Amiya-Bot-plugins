{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [],
    "properties": {
        "setting": {
            "title": "监听设置",
            "type": "object",
            "required": [
                "checkRate"
            ],
            "properties": {
                "checkRate": {
                    "title": "监听频率",
                    "description": "每隔一定时间刷新一下微博列表的频率，单位秒",
                    "type": "integer",
                    "default": 30
                },
                "sendGIF": {
                    "title": "是否发送GIF图",
                    "type": "boolean",
                    "default": false
                },
                "imagesCache": {
                    "title": "图片缓存目录",
                    "description": "微博图片缓存的目录，可以为绝对路径",
                    "type": "string",
                    "default": "log/weibo"
                }
            }
        },
        "sendAsync": {
            "title": "是否同时推送",
            "description": "同时向所有群推送，否则排队推送。",
            "type": "boolean",
            "default": false
        },
        "sendInterval": {
            "title": "发送间隔",
            "description": "如果不是同时发送，每隔一定时间向下一个群推送",
            "type": "number",
            "default": 0.2
        },
        "listen": {
            "title": "监听列表",
            "description": "监听的微博ID的列表",
            "type": "array",
            "default": [
                6279793937
            ]
        },
        "block": {
            "title": "规则屏蔽",
            "description": "正文触发列表中任一规则匹配（包括正则表达式和搜索）的微博将不会推送（即使仍然会被记录）",
            "type": "array",
            "default": [

            ]
        },
        "pushMessageInForwardMessage": {
            "title": "使用合并转发推送微博",
            "description": "开启此功能后，将微博推送放入合并转发信息中再发送，以避免微博推送过长影响群聊消息观感",
            "type": "boolean",
            "default": false
        }
    }
}
